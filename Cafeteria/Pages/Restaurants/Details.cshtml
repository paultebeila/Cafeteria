@page
@model Cafeteria.Pages.Restaurants.DetailsModel
@{
    ViewData["Title"] = "Restaurant Details";
}

<h2>@Model.Restaurant.Name</h2>
<p><strong>Location:</strong> @Model.Restaurant.LocationDescription</p>
<p><strong>Contact:</strong> @Model.Restaurant.ContactNumber</p>

<h3>Menu Items</h3>

@if (Model.Restaurant.MenuItems.Count == 0)
{
    <p>No menu items added yet.</p>
}
else
{
    <table class="table table-striped">
        <thead><tr><th>Name</th><th>Description</th><th>Price</th></tr></thead>
        <tbody>
            @foreach (var item in Model.Restaurant.MenuItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>R@item.Price.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-page="Index" class="btn btn-secondary">Back</a>
