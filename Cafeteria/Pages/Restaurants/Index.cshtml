@page
@model Cafeteria.Pages.Restaurants.IndexModel
@{
    ViewData["Title"] = "Restaurants";
}

<h2>Restaurants</h2>
<p><a class="btn btn-primary" asp-page="Create">Add Restaurant</a></p>

<table class="table table-striped">
    <thead><tr><th>#</th><th>Name</th><th>Location</th><th>Contact</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var r in Model.Restaurants)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.Name</td>
                <td>@r.LocationDescription</td>
                <td>@r.ContactNumber</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-page="Details" asp-route-id="@r.Id">Details</a>
                    <a class="btn btn-secondary btn-sm" asp-page="Edit" asp-route-id="@r.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-page="Delete" asp-route-id="@r.Id">Delete</a>
                    <a class="btn btn-primary btn-sm" asp-page="ManageMenu" asp-route-id="@r.Id">Manage Menu</a>
                </td>
            </tr>
        }
    </tbody>
</table>
