@page
@model Cafeteria.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Edit Employee";
}

<h2>Edit Employee</h2>
<form method="post">
    <input type="hidden" asp-for="Employee.Id" />
    <div class="mb-3">
        <label asp-for="Employee.Name"></label>
        <input asp-for="Employee.Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Employee.EmployeeNumber"></label>
        <input asp-for="Employee.EmployeeNumber" class="form-control" />
    </div>
    <button class="btn btn-success" type="submit">Save</button>
    <a class="btn btn-secondary" asp-page="Index">Back</a>
</form>
