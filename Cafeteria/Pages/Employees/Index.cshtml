@page
@model Cafeteria.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>
<p><a class="btn btn-primary" asp-page="Create">Add Employee</a></p>

<table class="table table-striped">
    <thead><tr><th>#</th><th>Name</th><th>Employee Number</th><th>Balance</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var e in Model.Employees)
        {
            <tr>
                <td>@e.Id</td>
                <td>@e.Name</td>
                <td>@e.EmployeeNumber</td>
                <td>R@e.Balance.ToString("N2")</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-page="Details" asp-route-id="@e.Id">Details</a>
                    <a class="btn btn-sm btn-secondary" asp-page="Edit" asp-route-id="@e.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@e.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
