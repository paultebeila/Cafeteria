@page
@model Cafeteria.Pages.Employees.DetailsModel
@{
    ViewData["Title"] = "Employee Details";
}

<h2>@Model.Employee.Name (@Model.Employee.EmployeeNumber)</h2>
<p>Balance: R@Model.Employee.Balance.ToString("N2")</p>
<p>Last deposit month: @(Model.Employee.LastDepositMonth?.ToString("yyyy-MM") ?? "N/A")</p>

<h4>Deposits</h4>
@if (Model.Employee.Deposits?.Count > 0)
{
    <table class="table">
        <thead><tr><th>Date</th><th>Amount</th></tr></thead>
        <tbody>
            @foreach (var d in Model.Employee.Deposits)
            {
                <tr>
                    <td>@d.Date.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>R@d.Amount.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{

    <p>No deposits yet.</p>
}

<h4>Orders</h4>
@if (Model.Employee.Orders?.Count > 0)
{
    <ul>
        @foreach (var o in Model.Employee.Orders)
        {
            <li>Order #@o.Id - R@o.TotalAmount.ToString("N2") - @o.Status</li>
        }
    </ul>
}
else
{

    <p>No orders yet.</p>
}
