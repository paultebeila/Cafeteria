@page
@model Cafeteria.Pages.Employees.CreateModel
@{
    ViewData["Title"] = "Add Employee";
}

<h2>Add Employee</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Employee.Name"></label>
        <input asp-for="Employee.Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Employee.EmployeeNumber"></label>
        <input asp-for="Employee.EmployeeNumber" class="form-control" />
    </div>
    <button class="btn btn-success" type="submit">Create</button>
    <a class="btn btn-secondary" asp-page="Index">Back</a>
</form>
